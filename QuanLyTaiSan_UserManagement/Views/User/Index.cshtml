@using Microsoft.AspNet.Identity
@using QuanLyTaiSan_UserManagement.Models;
@model RegisterViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Share/_LayoutPage1.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading mypanel">
                Quản Lý Người Dùng
                <div class="btn-group pull-right">
                    @*@if (Session["AuthenticationFeature"] != null && (Session["AuthenticationFeature"] as List<SystemFeature>).Any(k => k.ControllerName.Equals("Account") && k.ActionName.Equals("Register")))
                    {*@
                        <button class="btn green btn-success" data-toggle="modal" data-target="#registerModal">
                            Thêm Mới<i class="icon-plus"></i>
                        </button>
                    @*}*@
                </div>
            </header>
            <div class="panel-body">
                <div class="adv-table">
                    <div class="clearfix ">
                        <table class="display table table-bordered table-striped table-hover" style="table-layout: fixed">
                            <thead>
                            <tr>
                                <th>Người Dùng</th>
                                <th>Quyền</th>
                                <th>Đăng nhập lần cuối</th>
                                <th style="width: 10%; text-align: center">Sửa</th>
                                <th style="width: 10%; text-align: center">Xóa</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in (IList<ShortInformationUser>) ViewData["Users"])
                            {
                                <tr>
                                    <td>@item.Username</td>
                                    <td>@item.RoleName</td>
                                    <td>@{ var date = item.LastLoginTime?.ToString("dd/MM/yyyy hh:mm tt"); } @date</td>
                                    <td class="center">
                                        @*@if (Session["AuthenticationFeature"] !=null && (Session["AuthenticationFeature"] as List<SystemFeature>).Any(k => k.ControllerName.Equals("User") && k.ActionName.Equals("ChangeRoleByUserId")))
                                        {*@
                                            <a class="edit icon-pencil" href="#" data-name="@item.Username"
                                               data-id="@item.Id" data-role-id="@item.RoleId"></a>
                                        @*}*@
                                    </td>
                                    <td class="center">
                                        @*@if (Session["AuthenticationFeature"] != null && (Session["AuthenticationFeature"] as List<SystemFeature>).Any(k => k.ControllerName.Equals("User") && k.ActionName.Equals("DeleteUser")))
                                        {*@
                                            <a class="delete icon-trash" id="deleteItem" data-id="@item.Id"></a>
                                        @*}*@
                                        
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="registerModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Đăng kí tài khoản mới</h4>
                </div>
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <div class="login-wrap">
                        @Html.ValidationSummary("", new {@class = "text-danger"})
                        <div class="form-group">
                            @Html.LabelFor(m => m.Username, "Tên Đăng Nhập", new {@class = "col-md-4 control-label"})
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Username, new {@class = "form-control"})
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label"> Quyền </label>
                            <div class="col-md-8">
                                <select class="form-control" style="color: #888484" name="Role">
                                    @foreach (var item in (IList<AspNetRoles>) ViewData["Roles"])
                                    {
                                        <option value="@item.Name">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, "Mật Khẩu", new {@class = "col-md-4 control-label"})
                            <div class="col-md-8">
                                @Html.PasswordFor(m => m.Password, new {@class = "form-control"})
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, "Nhập Lại Mật Khẩu", new {@class = "col-md-4 control-label"})
                            <div class="col-md-8">
                                @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control"})
                            </div>
                        </div>
                   
                    </div>
               
                </div>
                <div class="modal-footer">
                    <button data-dismiss="modal" class="btn btn-default" type="button">Hủy</button>
                    <button class="btn btn-primary" type="submit">Tạo mới</button>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="ChangeRoleModal" tabindex="-1" role="dialog" aria-labelledby="ChangeRoleModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Thay đổi quyền của tài khoản</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-3" style="padding-top: 8px;"> Tên tài khoản </label>
                        <div class="col-md-9">
                            <div class="control-label" id="username">Admin</div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3" style="padding-top: 8px;"> Quyền </label>
                        <div class="col-md-9">
                            <select class="form-control" style="color: #888484" id="current-role">
                                @foreach (var item in (IList<AspNetRoles>) ViewData["Roles"])
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default" type="button">Hủy</button>
                <a id="btnConfirm" class="btn btn-success"> Xác nhận</a>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="teM" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Xóa người dùng</h4>
            </div>
            <div class="modal-body">
                Bạn có muốn xóa người dùng?
                <div style="text-align:center;display:none" id="loaderDiv">
                    <img src="~/Content/img/Spinner-1s-200px.gif" width="150" />
                </div>
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default" type="button">Hủy</button>
                <a id="btnConfirmDelete" class="btn btn-warning"> Xoá</a>
            </div>
        </div>
    </div>
</div>

<script>
    $(".edit").click(function (e) {
        e.preventDefault();
        var id = $(this).attr('data-id');
        var roleId = $(this).attr('data-role-id');
        $('#ChangeRoleModal').modal('show');
        //set username
        $('#username').html($(this).attr('data-name'));
        $("#current-role").val(roleId).change();

        $("#btnConfirm").click(function () {
            var selectedRoleId = $('#current-role').val();
            $.ajax({
                type: "POST",
                url: "/User/ChangeRoleByUserId",
                data: { userId: id, roleId: selectedRoleId },
                success: function (result) {
                    if (result.status) {
                        location.reload();
                    } else {
                        alert('Có lỗi xảy ra trong quá trình xử lí');
                    }
                }
            });
        });
    });

    $(".delete").click(function () {
        var id = $(this).attr('data-id');
        $('#deleteModal').modal('show');
        $("#btnConfirmDelete").click(function () {
            $.ajax({
                type: "GET",
                url: "/User/DeleteUser",
                data: { userId: id },
                success: function (result) {
                    if (result.status) {
                        location.reload();
                    } else {
                        alert('Có lỗi xảy ra trong quá trình xử lí');
                    }
                }
            });
        });
        
    });
</script>



